<%-include header%>
    <div style="width:1024px;margin:1em auto;"> 
    	<div class="container" style="border:1px solid green;width:720px;float:left"> 
            <h3 class="text-left text-success"><span class="glyphicon glyphicon-hand-down"></span> 最新提问</h3>
            <!--<ul class="horul"> 
                <li>最新</li> 
                <li>最热</li> 
                <li>未回答</li> 
            </ul> -->
            <table class="table table-striped table-hover"> 
                <thead>
                    <th>
                      <td>浏览量</td>
                      <td>标题</td>
                    </th>
                </thead>
   				<tbody class="answer"> 
                <%
                if(rs!=undefined){
                    rs.forEach(function(row){ %>
                    <tr> 
                        <td> 
                            <div><%= row['renum'] %><br/>回答</div> 
                        </td> 
                        <td><%= row['looknum'] %><br/>浏览</td> 
                        <td><a class="text-success" href="/question/detail?qid=<%=row['qid']%>" target="_blank"><%= row['title'] %></a></td> 
                     </tr>
                <%
                     })
                } 
                if(count>0){
                %>
                 <tr>
                     <td colspan="3" align="center">
                         总共<%=count%>跳记录，
                         第<%=page%>/<%=countPage%>页&nbsp;&nbsp;
                         <%if(page!=1){%>
                         <a href="/?page=1" class="btn btn-success">首页</a>&nbsp;
                         <a href="/?page=<%=(page-1)%>" class="btn btn-success">上一页</a>&nbsp;
                         <%}%>
                         <%if(page!=countPage){%>
                         <a href="/?page=<%=(page+1)%>" class="btn btn-success">下一页</a>&nbsp;
                         <a href="/?page=<%=countPage%>" class="btn btn-success">尾页</a>&nbsp;
                         <%}%>
                     </td>
                 </tr>
                 <%
                    }
                 %>
  				</tbody> 
			</table> 
    	</div> 
	    <div class="container" style="border:1px solid green;width:300px;float:right"> 
	        <table class="table table-striped"> 
               <thead><tr><th><h4 class="text-success"><span class="glyphicon glyphicon-pushpin"></span> 置顶帖</h4></th></tr></thead>
	           <tbody> 
	              <tr> 
		             <td class="text-center">1</td> 
		             <td>学习交流贴</td> 
		          </tr> 
		          <tr> 
		             <td class="text-center">2</td> 
		             <td>技术交流贴</td> 
		          </tr> 
		          <tr> 
		             <td class="text-center">3</td> 
		             <td>情感交流贴</td> 
	              </tr> 
	           </tbody> 
	        </table> 
	    </div> 
	</div>
